<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Read retention days from application.properties (default: 14) -->
    <springProperty scope="context" name="LOG_RETENTION_DAYS" source="app.log.retention-days" defaultValue="14"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/retailpos.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Daily rollover with compression -->
            <fileNamePattern>logs/retailpos.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- Max 10MB per file -->
            <maxFileSize>10MB</maxFileSize>
            <!-- Configurable retention -->
            <maxHistory>${LOG_RETENTION_DAYS}</maxHistory>
            <!-- Total size cap to prevent disk fill -->
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
